{
  "name": "qr-factory-v4",
  "version": "4.0.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "server": "node server.js",
    "dist:win": "electron-builder --win portable",
    "dist": "electron-builder"
  },
  "dependencies": {
    "express": "^4.19.2",
    "better-sqlite3": "^11.0.0",
    "qrcode": "^1.5.4",
    "xlsx": "^0.18.5",
    "pdfkit": "^0.15.0"
  },
  "devDependencies": {
    "electron": "31.0.0",
    "electron-builder": "24.13.3",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "asar": false,
    "appId": "com.qrfactory.v4",
    "productName": "QR Factory V4",
    "directories": {
      "output": "dist"
    },
    "files": [
      "www/**/*",
      "main.js",
      "server.js",
      "preload.js",
      "package.json",
      "README.md"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  }
}